{
  "defaults": {
    "baseUrl": "https://openrouter.ai/api/v1",
    "timeout": 60000,
    "envFile": ".env",
    "headers": {
      "Content-Type": "application/json"
    },
    "auth": {
      "type": "bearer",
      "token": "$OPENROUTER_API_KEY"
    }
  },
  "templates": [
    {
      "name": "list-models",
      "description": "List available models",
      "url": "/models",
      "method": "GET"
    },
    {
      "name": "quick-chat",
      "description": "Quick chat message",
      "url": "/chat/completions",
      "method": "POST",
      "body": {
        "model": "openai/gpt-4o",
        "messages": [{ "role": "user", "content": "" }]
      },
      "fields": [
        {
          "name": "prompt",
          "label": "Prompt",
          "path": "messages[0].content"
        }
      ]
    },
    {
      "name": "chat-with-system",
      "description": "Chat with system prompt",
      "url": "/chat/completions",
      "method": "POST",
      "body": {
        "model": "openai/gpt-4o",
        "messages": [
          { "role": "system", "content": "" },
          { "role": "user", "content": "" }
        ],
        "temperature": 0.7,
        "max_tokens": 1000
      },
      "fields": [
        {
          "name": "system_prompt",
          "label": "System Prompt",
          "path": "messages[0].content"
        },
        {
          "name": "prompt",
          "label": "Prompt",
          "path": "messages[1].content"
        }
      ]
    }
  ]
}
